/*
 * X509 Data Schema
 *
 * Typically only used in the header of a JBL Document.
 *
 * Based on the XML-DSIG standard.
 *
 * http://www.w3.org/TR/xmldsig-core/#sec-X509Data
 *
 */
{
  "name": "x509_data",
  "description": "X509 certificate data used to sign the document's data.",
  "properties": {
    "serial": {
      "type": "object",
      "required": true,
      "properties": {
        "issuer_name": {
          "type": "string",
          "description": "The issuer name or description that complies with section 3 of RFC4514.",
          "required": true
        },
        "serial_number": {
          "type": "string",
          "description": "The serial number of the certificate.",
          "required": true
        }
      }
    },
    "ski": {
      "type": "string",
      "description": "Base64 encoded plain (i.e. non-DER-encoded) value of a X509 V.3 SubjectKeyIdentifier extension.",
      "required": false,
    },
    "certificate": {
      "type": "string",
      "description": "Base64 encoded string of the X509 certificate used to sign the payload.",
      "required": false
    },
    "crl": {
      "type": "string",
      "description": "Contains a base64-encoded certificate revocation list.",
      "required": false
    }
  }
}
